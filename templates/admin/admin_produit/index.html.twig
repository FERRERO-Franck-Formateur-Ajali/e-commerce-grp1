{% extends 'admin/base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Content</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Promo en %</th>
                <th>Details</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.content }}</td>
                <td>{{ produit.image }}</td>
                <td>{{ produit.price }}</td>
                <td>{{ produit.stock ? 'Oui' : 'Non' }}</td>
                <td>{{ produit.promo }}</td>
                <td>{{ produit.details }}</td>
                <td>
                    <a href="{{ path('admin_produit_show', {'id': produit.id}) }}">Voir</a>
                    <a href="{{ path('admin_produit_edit', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success"a href="{{ path('admin_produit_new') }}">Ajouter un nouveau produit</a>
{% endblock %}
