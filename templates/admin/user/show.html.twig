{% extends 'admin/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.Nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.Prenom }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ user.Birthday ? user.Birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ user.phone }}</td>
            </tr>
        </tbody>
    </table>
    
    <a class="btn btn-success" href="{{ path('admin_user_index') }}">Retour à la liste</a>

    <a class="btn btn-success" href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
