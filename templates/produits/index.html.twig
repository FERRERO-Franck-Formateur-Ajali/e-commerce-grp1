{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}

    <section class="container-fluid row row-cols-3 center">

        {% for produit in produits %}

        <div class="card-deck container p-3">
            <div class="card">
                <img src="{{ produit.image }}" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-center">{{ produit.name }}</h5>
                    {{ produit.content }}<br/><br/>
                    <span class="{{ produit.prixpromo != null ? 'barrer' : ''}}">{{ produit.price }} €/Kg</span>
                    <p>{{ produit.prixpromo }}</p>
                    <p> Disponibilité:
                        {% if produit.stock == 0 %}
                            <img src="{{ asset('favicon_io red/favicon-16x16.png')}}">
                        {% else %}
                            <img src="{{ asset('favicon_io green/favicon-16x16.png')}}">
                        {% endif %}
                    </p>
                    <a href="{{ path('cart_add', {'id': produit.id}) }}" class="btn focus btn-color mt-auto"><img src="/favicon_cart/cart1.png" alt="icone"> Ajouter au panier</a>
                    <a href="{{ path('produits_show', {'id': produit.id}) }}" class="btn focus btn-color "><img src="/favicon_info/favicon-32x32.png" alt="icone"> Description</a>
                </div>
            </div>
        </div>

        {% endfor %}
        
    </section>  

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(produits, 'pagination.html.twig') }}
    </div>

{% endblock %}
