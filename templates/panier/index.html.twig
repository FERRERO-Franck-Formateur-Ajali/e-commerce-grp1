{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container">
            <h1 class="p-3">Votre panier</h1>
            {% if items | length > 0 %}
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix</th>
                            <th>Promo</th>
                            <th>Quantit√©</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <th>{{ item.produit.name }}</th>
                                <th>{{ item.produit.promo != null ? promo(item.produit.price, item.produit.promo) : item.produit.price|total }}</th>
                                <th>{{ item.produit.promo }}%</th>
                                <th>{{ item.quantity }}</th>
                                <th>{{ item.produit.promo != null ? totalPromo(item.produit.price, item.produit.promo, item.quantity) : total(item.produit.price * item.quantity) }}</th>
                                <th>
                                    <a href="{{ path('cart_remove', {'id': item.produit.id}) }}" class"shoping__cart__item__close">
                                        <i class="icon_close"></i>
                                    </a>
                                </th>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right">Total :</td>
                            <td>{{ total|total }}</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            {% else %}
                <p>Votre panier est vide</p>
            {% endif %}
            <a class="btn btn-success mb-4">Valider ma commande</a>
    </div>
{% endblock %}
