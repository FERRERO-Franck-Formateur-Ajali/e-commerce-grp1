{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.prenom, {'attr': {'placeholder': "Prenom"}}) }}
        {{ form_row(registrationForm.nom, {'attr': {'placeholder': "Nom"}}) }}
        {{ form_row(registrationForm.email, {'label':"Adresse Mail", 'attr': {'placeholder': "Adresse mail"}}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'placeholder': "Mot de passe"}}) }}
        {{ form_row(registrationForm.birthday, {'label':"Date de naissance"}) }}
        {{ form_row(registrationForm.phone, {'label':"Téléphone"}) }}
        {{ form_row(registrationForm.newsletter, {'label':"Inscription à la Newsletter"}) }}
        {{ form_row(registrationForm.cgv, {'label':"Accepter les termes des C.G.V"}) }}
        

        <button rtype="submit" class="btn primary-btn">enregistrer</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
