{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}

    <h1 class="center m-5">Mes informations personnelles</h1>

    {% for user in User %}

        <div class="container-fluid row row-cols-3 justify-content-center">


            <div class="card p-3 m-5 container-fluid justify-content-center" style="max-width : 50%">
                <div class="card-header center">Mes infos</div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p class="card-text">Nom: {{ user.nom }}</p>
                        <p class="card-text">Prénom: {{ user.prenom }}</p>
                        <p class="card-text">Email: {{ user.email }}</p>
                        <p class="card-text">Mot de passe: {{ user.password }}</p>
                        <p class="card-text">Téléphone: {{ user.phone }}</p>
                    </blockquote>

                        <a href="{{ path('info_edit', {'id': user.id}) }}" class="btn btn-success m-3" style="max-width : auto">Modifier</a>
                    
                </div>
            </div>

        </div>
    {% endfor %}

{% endblock %}
